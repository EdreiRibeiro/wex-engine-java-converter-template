<function name="vse-converter-bootstrap-parser" type="converter-java" products="all" internal="${project.version}">
  <!-- TODO: Specify your type-in and type-out attributes of the function element -->
  <prototype>
    <label>Bootstrap Java Converter</label>
    <description>
      This converter invokes the Java converter interface, but does no actual converting.
    </description>
  </prototype>
  <!-- TODO If using the FileConverter, you must add input="file" attribute to the <parser> node -->
  <parser type="java">
    <option name="install-dir"><value-of select="viv:value-of('install-dir', 'option')"/></option>
    <option name="plugin-name">bootstrap.plugin@bootstrap-converter</option>
  </parser>
</function>
